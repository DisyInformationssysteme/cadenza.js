{
  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "declaration": true,
    "outDir": "."
  },
  "include": [ "src" ],
  "exclude": [ "**/*.test.ts" ]
}
